<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Photo Gallery - 404</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/public/error-page.css">
    <link rel="shortcut icon" href="/ico/photoVoyager-ico-generate.ico" type="image/x-icon">
</head>
<body>
    <div class="container">
        <div class="content">
            <h1 id="error-code">404</h1>
            <p id="error-text">This page does not exist</p>
            <a href="/" class="btn">Back to home page</a>
        </div>
    </div>
    <script>
        // Esta parte es opcional, solo si quieres que la animaci칩n se reproduzca cuando se cargue la p치gina
        window.addEventListener('load', () => {
            const text = document.getElementById('error-text');
            text.style.animation = 'none'; // Se detiene la animaci칩n
            text.offsetHeight; // Se fuerza un reflow
            text.style.animation = 'typing 3s steps(40, end)'; // Se reinicia la animaci칩n
        });

        const tooltip = document.getElementById('tooltip');
        const errorCode = document.getElementById('error-code');

        errorCode.addEventListener('mouseover', () => {
            tooltip.style.display = 'block';
        });

        errorCode.addEventListener('mouseout', () => {
            tooltip.style.display = 'none';
        });
    </script>
</body>
</html>
